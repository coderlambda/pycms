background-dark = #0f7dbf;
text-color = #0f7dbf;

body
  font: 12px "Lucida Grande", Helvetica, Arial, sans-serif

html,body,div,p,span,img,button,a,ul,li
  margin: 0;
  padding: 0;

ul,li
  list-style: none;

a
  color: text-color;
  text-decoration: none;

.clearfix:after
  content: '0020';
  display: block;
  float: none;
  clear: both;
  font-size: 0;

.header,
.content,
.footer
  margin: auto;
  width: 990px;

.header
  margin: 30px auto;

.content
  border-radius: 3px;
  box-shadow: 0 0 3px #999;


.content-body
  padding: 12px;

.logo1
  margin-right: 150px;

.main-menu
  padding: 8px 15px;
  height: 36px;
  background-color: background-dark;
  border-radius: 3px 3px 0 0;

  li
    float: left;

    a
      margin-right: 4px;
      padding: 8px 20px;
      color: #fff;
      line-height: 36px;
      border-radius: 3px;
      transition: 0.2s;

    a:hover
      background-color: lighten(background-dark, 20%);

    a.active
      color: background-dark;
      background-color: #fff;


